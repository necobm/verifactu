{
    "name": "jdg/verifactu",
    "description": "VERI*FACTU es un sistema diseñado para combatir el fraude fiscal, centrado específicamente en la gestión del IVA/IGIC. Esta librería permite generar los hashes y enviar las facturas a la AEAT.",
    "type": "library",
    "keywords": ["verifactu", "iva", "igic", "facturación", "aeat", "hash"],
    "license": "MIT",
    "homepage": "https://github.com/jdgOpenCode/verifactu",
    "authors": [
        {
            "name": "José David Guillén",
            "email": "jd@infdj.com",
            "homepage": "https://git.jd.guillen.io/jdg/cv"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-hash": "*",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "jdgOpenCode\\verifactu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jdgOpenCode\\verifactu\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}